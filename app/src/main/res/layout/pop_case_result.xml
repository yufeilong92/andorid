<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gm_mockexamdialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/TitleBar">

        <ImageView
            android:id="@+id/iv_gm_case_exam_back"
            style="@style/TitleBarAction"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/title_action_height"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:singleLine="true"
            android:text="答题结果"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            style="@style/TitleBarAction"
            android:padding="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_margin="@dimen/space_8"
        android:background="@mipmap/ic_statistics_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试得分"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gm_case_result_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_32"
            android:paddingRight="@dimen/space_32">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_gm_case_mockexam_dotime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用时"
                    android:textColor="@color/text_fu_color"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_gm_case_mockexam_dotime_title_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:text="1:02:03"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_gm_case_mockexam_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确率"
                    android:textColor="@color/text_fu_color"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_gm_case_mockexam_right_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:text="85"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_gm_case_casenew_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16" />

    <View
        android:id="@+id/view_gm_case_mockexam_line"
        style="@style/view_line_1_gray" />

    <LinearLayout
        android:id="@+id/ll_mockexam_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_gm_case_mockexan_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_8"
            android:layout_weight="1"
            android:background="@mipmap/ic_tab_line_n"
            android:text="@string/again_do" />

        <Button
            android:id="@+id/btn_gm_case_mockexan_jiexi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_16"
            android:layout_weight="1"
            android:background="@mipmap/ic_tab_line_s"
            android:text="@string/look_analyze"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>