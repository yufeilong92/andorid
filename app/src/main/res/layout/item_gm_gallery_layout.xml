<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll_gm_gallery_root"
    android:padding="@dimen/space_16"
    android:maxWidth="@dimen/space_48"
    android:layout_margin="5dp"
    android:background="@drawable/case_evalue_li_bg_s"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gm_gallery_postion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_gm_gallery_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gm_gallery_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/red_text"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_gm_gallery_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textColor="@color/red_text"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_gm_gallery_one_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gm_gallery_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/red_text"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_gm_gallery_add_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加评分"
            android:textColor="@color/red_text"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_gm_gallery_two_layout"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>