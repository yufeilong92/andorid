<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_gmeight_one_jianda_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_gm_eight_one_input_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/view_gm_eight_one_line_one"
            style="@style/view_line_10_gray"
            android:layout_marginTop="@dimen/space_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/text_size_16"
            android:paddingRight="@dimen/text_size_16">

            <View
                android:layout_width="@dimen/space_2"
                android:layout_height="match_parent"
                android:background="@color/red_text" />

            <TextView
                android:id="@+id/tv_gm_eight_one_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:text="我的答案"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gm_eight_one_input_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="top|left"
            android:padding="@dimen/space_8"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gm_eight_one_input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/text_size_16"
        android:paddingRight="@dimen/text_size_16">

        <View
            android:id="@+id/view_gm_eight_one_line"
            style="@style/view_line_1_gray"
            android:layout_marginTop="@dimen/space_8" />


        <com.xuechuan.xcedu.weight.ContentEditText
            android:id="@+id/et_eight_one_input_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_180"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:background="@color/transparent"
            android:gravity="top|left"
            android:hint="请输入答案"
            android:imeOptions="actionNone"
            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
            android:lines="8"
            android:padding="@dimen/space_8" />

        <View
            android:id="@+id/view_gm_eight_two_line"
            style="@style/view_line_1_gray" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_gm_eight_one_yuyin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_size_16"
        android:paddingRight="@dimen/text_size_16"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_gm_eight_one_look_jiexi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_32"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_8"
            android:drawableLeft="@mipmap/bg_chakanjiexi"
            android:gravity="center_vertical"
            android:text="@string/look_analyze"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_gm_eight_one_yuyin_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/qb_anli_yuyinshuru" />

            <ImageView
                android:id="@+id/iv_gm_eight_one_yuyin_one_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/qb_anli_yuyinshuru"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gm_eight_one_yuyin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轻触麦克风语音输入"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

    </RelativeLayout>
    <!--评价布局-->
    <RelativeLayout
        android:id="@+id/rl_gm_eight_one_jiexifu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_gm_eight_one_look_jiexi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_32"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_size_16"
            android:paddingRight="@dimen/text_size_16">

            <ImageView
                android:id="@+id/iv_gm_eight_one_answer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qb_xcjiexi" />

            <TextView
                android:id="@+id/tv_gm_eight_one_answer_title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_16"
                android:text="ssdasdaad" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_gm_eight_one_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_16"
            android:paddingLeft="@dimen/text_size_16"
            android:paddingRight="@dimen/text_size_16"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_gm_eight_one_evlaues_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical"
            android:visibility="gone">

            <View style="@style/view_line_tab_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="vertical"
                android:paddingLeft="@dimen/text_size_16"
                android:paddingRight="@dimen/text_size_16">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gm_eight_one_number_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/text_size_24"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_gm_eight_one_number_title_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="分"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_gm_eight_one_addEvalues"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_30"
                        android:background="@drawable/everyday_main_btn_bg"
                        android:text="评分"
                        android:textColor="@color/white" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16">

                    <TextView
                        android:id="@+id/tv_gm_eihgt_one_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_fu_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_gm_eight_one_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="6"
                        android:textColor="@color/text_fu_color"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/qb_pingfenbs" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/qb_pingfenbs" />

                    <SeekBar
                        android:id="@+id/sb_gm_eight_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/space_8"
                        android:max="60"
                        android:min="0"
                        android:progress="0"
                        android:progressDrawable="@drawable/case_evalue_seekbar_bg"
                        android:thumb="@mipmap/qb_pingfenbt"
                        android:thumbOffset="0dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>