<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rank_pai"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:src="@mipmap/qb_mei_fst" />

        <TextView
            android:id="@+id/tv_rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_rank_head"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@mipmap/common_icon_defaultpicture_mini" />

        <TextView
            android:id="@+id/tv_rank_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_weight="1"
            android:text="年hi速度"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_rank_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00" />
    </LinearLayout>

    <View android:layout_height="1dp"
        android:background="@color/rank_line"
        android:layout_width="match_parent"/>
</LinearLayout>